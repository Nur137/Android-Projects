<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_patient__dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".UI.Patient_Rating"
    tools:ignore="ScrollViewSize">






    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            tools:ignore="UselessLeaf">

            <Button
                android:text="Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/update"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="UselessParent">


            <ImageView
            android:id="@+id/image"
           android:layout_width="match_parent"
            android:layout_height="450dp"
            android:contentDescription="@string/Patient"
            android:background="@drawable/body_front"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/button_front_forehead"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:background="@android:color/transparent"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_front_cheek_right"
                            android:layout_width="match_parent"
                            android:layout_height="22dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            tools:ignore="ButtonStyle" />

                        <Button
                            android:id="@+id/button_front_cheek_left"
                            android:layout_width="match_parent"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            tools:ignore="ButtonStyle" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/button_front_chin"
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:background="@android:color/transparent"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        >

                        <Button

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/button_front_shoulder_right"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            tools:ignore="ButtonStyle" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/button_front_shoulder_left"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"

                            tools:ignore="ButtonStyle" />
                    </LinearLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:orientation="horizontal"
                       android:baselineAligned="false">


                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:layout_weight="1.1">

                           <Button
                               android:id="@+id/button_front_arm_right"
                               android:layout_width="match_parent"
                               android:layout_height="40dp"
                               android:background="@android:color/transparent"
                               />
                           <Button
                               android:id="@+id/button_front_elbow_right"
                               android:layout_width="match_parent"
                               android:layout_height="25dp"
                               android:background="@android:color/transparent"/>

                           <Button
                               android:id="@+id/button_front_forearm_right"
                               android:layout_width="match_parent"
                               android:layout_height="55dp"
                               android:layout_marginRight="10dp"
                               android:background="@android:color/transparent"
                               tools:ignore="RtlHardcoded" />

                           <Button
                               android:id="@+id/button_front_wrist_right"
                               android:layout_width="match_parent"
                               android:layout_height="46dp"
                               android:layout_marginRight="15dp"
                               android:background="@android:color/transparent"
                               tools:ignore="RtlHardcoded" />

                       </LinearLayout>


                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:layout_weight="1">

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">

                               <Button
                                   android:id="@+id/button_front_chest_right"
                                   android:layout_width="match_parent"
                                   android:layout_height="40dp"
                                   android:layout_weight="1"
                                   android:background="@android:color/transparent"
                                   tools:ignore="ButtonStyle,TooDeepLayout" />

                               <Button
                                   android:id="@+id/button_front_chest_left"
                                   android:layout_width="match_parent"
                                   android:layout_height="40dp"
                                   android:layout_weight="1.2"
                                   android:background="@android:color/transparent"
                                   tools:ignore="ButtonStyle" />


                           </LinearLayout>


                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <Button
                                   android:id="@+id/button_front_upper_abdomen"
                                   android:layout_width="match_parent"
                                   android:layout_height="30dp"
                                   android:background="@android:color/transparent"
                                   />

                           </LinearLayout>


                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">

                               <Button
                                   android:id="@+id/button_front_lower_abdomen"
                                   android:layout_width="match_parent"
                                   android:layout_height="30dp"
                                   android:background="@android:color/transparent"
                                   />

                           </LinearLayout>

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal"
                               android:clipChildren="false"
                               >

                               <Button
                                   android:id="@+id/button_front_surgical"
                                   android:layout_width="100dp"
                                   android:layout_height="30dp"
                                   android:background="@android:color/transparent"
                                   />

                           </LinearLayout>



                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="55dp"
                               android:orientation="horizontal">



                               <Button
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:id="@+id/button_front_thigh_right"
                                   android:background="@android:color/transparent"
                                   tools:ignore="ButtonStyle"></Button>

                               <Button
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:id="@+id/button_front_thigh_left"
                                   android:background="@android:color/transparent"
                                   tools:ignore="ButtonStyle"></Button>


                           </LinearLayout>

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="45dp"
                               android:orientation="horizontal">
                               <Button
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:id="@+id/button_front_knee_right"
                                   android:background="@android:color/transparent"
                                   tools:ignore="ButtonStyle"></Button>

                               <Button
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:background="@android:color/transparent"
                                   android:id="@+id/button_front_knee_left"
                                   tools:ignore="ButtonStyle"></Button>


                           </LinearLayout>
                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="70dp"
                               android:orientation="horizontal"
                               tools:ignore="TooManyViews">

                               <Button
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:id="@+id/button_front_leg_right"
                                   android:background="@android:color/transparent"
                                   tools:ignore="ButtonStyle,TooManyViews"></Button>

                               <Button
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:id="@+id/button_front_leg_left"
                                   android:background="@android:color/transparent"
                                   tools:ignore="ButtonStyle"></Button>


                           </LinearLayout>

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="20dp"
                               android:orientation="horizontal">

                               <Button
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:background="@android:color/transparent"
                                   android:id="@+id/button_front_ankle_right"
                                   tools:ignore="ButtonStyle"></Button>

                               <Button
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:background="@android:color/transparent"
                                   android:id="@+id/button_front_ankle_left"
                                   tools:ignore="ButtonStyle"></Button>


                           </LinearLayout>

                           <LinearLayout
                               android:layout_width="match_parent"
                               android:layout_height="20dp"
                               android:orientation="horizontal">

                               <Button
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:background="@android:color/transparent"
                                   android:id="@+id/button_front_foot_right"
                                   tools:ignore="ButtonStyle"></Button>

                               <Button
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:layout_weight="1"
                                   android:background="@android:color/transparent"
                                   android:id="@+id/button_front_foot_left"
                                   tools:ignore="ButtonStyle"></Button>


                           </LinearLayout>

                       </LinearLayout>


                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:layout_weight="1.05">

                           <Button
                               android:id="@+id/button_front_arm_left"
                               android:layout_width="match_parent"
                               android:background="@android:color/transparent"
                               android:layout_height="40dp"
                               />
                           <Button
                               android:id="@+id/button_front_elbow_left"
                               android:layout_width="match_parent"
                               android:layout_height="25dp"
                               android:background="@android:color/transparent"/>

                           <Button
                               android:id="@+id/button_front_forearm_left"
                               android:layout_width="match_parent"
                               android:layout_height="55dp"
                               android:background="@android:color/transparent"
                              />

                           <Button
                               android:id="@+id/button_front_wrist_left"
                               android:layout_width="match_parent"
                               android:layout_height="46dp"
                               android:background="@android:color/transparent"
                               android:layout_marginLeft="15dp"


                               tools:ignore="RtlHardcoded" />


                       </LinearLayout>


                   </LinearLayout>



                </LinearLayout>


            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            tools:ignore="UselessLeaf"></LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:id="@+id/popup"
        android:layout_marginTop="100dp"
        android:visibility="invisible">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:id="@+id/close"
            android:text="Close"
            android:background="@android:color/holo_red_dark"
            tools:ignore="HardcodedText" />



        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/horizontalScrollView"
            tools:ignore="ObsoleteLayoutParam,RtlHardcoded">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/no_pain"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/no_pain"
                        android:layout_weight="1"
                        tools:ignore="ButtonStyle"
                        />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:layout_weight="1"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mild"
                        android:id="@+id/mild"
                        android:layout_weight="1"
                        tools:ignore="ButtonStyle" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:layout_weight="1"
                        tools:ignore="ButtonStyle" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/moderate"
                        android:id="@+id/moderate"
                        android:layout_weight="1"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:layout_weight="1"
                        tools:ignore="ButtonStyle" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/severe"
                        android:id="@+id/severe"
                        android:layout_weight="1"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:layout_weight="1"
                        tools:ignore="ButtonStyle" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/very_severe"
                        android:id="@+id/very_severe"
                        android:layout_weight="1"
                        tools:ignore="ButtonStyle" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@android:color/white"
                        android:layout_weight="1"
                        tools:ignore="ButtonStyle" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/worst_possible"
                        android:id="@+id/worst_possible"
                        android:layout_weight="1"
                        tools:ignore="ButtonStyle" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#26AE90"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rat0"
                        android:layout_marginLeft="10dp"
                        android:background="#26AE90"
                        android:text="0"
                        tools:ignore="ButtonStyle,HardcodedText" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/rat1"
                        android:layout_marginLeft="10dp"
                        android:background="#26AE90"
                        android:text="1"
                        tools:ignore="ButtonStyle,HardcodedText" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#26AE90"
                        android:id="@+id/rat2"
                        android:text="2"
                        tools:ignore="ButtonStyle,HardcodedText" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#26AE90"
                        android:id="@+id/rat3"
                        android:text="3"
                        tools:ignore="ButtonStyle,HardcodedText" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#26AE90"
                        android:id="@+id/rat4"
                        android:text="4"
                        tools:ignore="ButtonStyle,HardcodedText" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#26AE90"
                        android:id="@+id/rat5"
                        android:text="5"
                        tools:ignore="ButtonStyle,HardcodedText" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#26AE90"
                        android:id="@+id/rat6"
                        android:text="6"
                        tools:ignore="ButtonStyle,HardcodedText" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#26AE90"
                        android:id="@+id/rat7"
                        android:text="7"
                        tools:ignore="ButtonStyle,HardcodedText" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#26AE90"
                        android:id="@+id/rat8"
                        android:text="8"
                        tools:ignore="ButtonStyle,HardcodedText" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#26AE90"
                        android:id="@+id/rat9"
                        android:text="9"
                        tools:ignore="ButtonStyle,HardcodedText" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#26AE90"
                        android:id="@+id/rat10"
                        android:text="10"
                        tools:ignore="ButtonStyle,HardcodedText" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp" >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FDFED7"
                        tools:ignore="ButtonStyle" />


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FDF95A"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FDF95A"
                        android:alpha=".8"
                        tools:ignore="ButtonStyle" />



                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FCE327"
                        tools:ignore="ButtonStyle" />


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#FCE327"
                        android:alpha=".8"
                        tools:ignore="ButtonStyle" />



                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F8A73A"
                        tools:ignore="ButtonStyle" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F8A73A"
                        android:alpha =".8"
                        tools:ignore="ButtonStyle" />


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F7B9CE"
                        tools:ignore="ButtonStyle" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#F7B9CE"
                        android:alpha=".8"
                        tools:ignore="ButtonStyle" />



                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#990342"
                        tools:ignore="ButtonStyle" />


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#990042"
                        android:alpha=".8"
                        tools:ignore="ButtonStyle" />

                </LinearLayout>


            </LinearLayout>


        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/org_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>
        </LinearLayout>

    </LinearLayout>





   </RelativeLayout>
