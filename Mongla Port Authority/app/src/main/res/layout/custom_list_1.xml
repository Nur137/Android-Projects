                android:id="@+id/text1"
                android:textSize="12dp"
                android:text="column1"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textAlignment="center"
                android:textColor="@android:color/white" />


        </LinearLayout>



            <LinearLayout
            android:layout_width="match_parent"
